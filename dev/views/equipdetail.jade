    .container
      h2 "--------------------------------------"
      h2 "--------------------------------------"
      h3 Equipment Detail
      .table-responsive
        table.table.table-striped.table-bordered
          thead
            tbody
                tr
                  td Equipment ID
                  td=equipdetail[0]._id
                tr
                  td Product Name
                  td=equipdetail[0]._Product.ProductName
                tr
                  td Status
                  td=equipdetail[0].StatusDescription
                tr                    
                  td Serial Number
                  td=equipdetail[0].SerialNumber
                tr
                  td Install Date
                  td #{moment(equipdetail[0].InstallDate).format('MMMM, Do')}
                tr
                  td Next PM Date
                  td #{moment(equipdetail[0].NextPMDate).format('MMMM, Do')}
      .container
        p
        p
        h3 Service History
        .table-responsive
          table.table.table-striped.table-bordered
            thead
              th Order ID
              th Problem
              th Status
              th Problem Note
              th Open Date
              th Open Date
              tbody
                -for order in orderhistory
                  tr
                    td=order._id
                    td=order.ProblemTypeDescription
                    td=order.CurrentStatus
                    td=order.ProblemNotes
                    td #{moment(order.OpenDate).format('MMMM, Do')}
                    td #{moment(order.CloseDate).format('MMMM, Do')}
                      
