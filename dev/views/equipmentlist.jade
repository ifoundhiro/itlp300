
html
  head
    script(src='/javascripts/jquery-2.0.3.min.js')      
    script(src='/javascripts/happy.js')
    script(src='/javascripts/happy.methods.js')
    meta(nam='viewport' content='width=device-width, initial-scale=1.0')
    title Bootstrap 101 Template
    link(rel="stylesheet" href="/stylesheets/bootstrap.min.css")
  body
    .modal.fade(id='myModal' tabindex='-1' role='dialog' aria-labelledby='myModalLabel' aria-hidden='true')
      .modal-dialog.wide-modal
        .modal-content
    script(src='/javascripts/jquery-2.0.3.min.js')
    script(src='/javascripts/bootstrap.min.js')
    nav.navbar-default.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand.logo-nav(href='/customer')
            | GE Healthcare Service Center
          .navbar-collapse.collapse
            ul.nav.navbar-nav
              li.active
                a(href='/customer')
                  span.glyphicon.glyphicon-home
                  |  Home
              li
                a(href='/customer/create')
                  span.glyphicon.glyphicon-wrench
                  |  Create a Service Request
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  span.glyphicon.glyphicon-eye-open
                  |  My Equipment
                  b.caret
                ul.dropdown-menu
                  li
                    a(href='/customer/equipment') View My Equipment
                  li
                    a(href='/Customer/reports') View Reports
              form.navbar-form.navbar-right(action='/logout')
                button(type='submit' class='btn btn-default') logout
      .container
        p
        p
        .table-responsive
          table.table.table-striped.table-bordered
            thead
              tr
                th.text-center Equipment ID
                th.text-center Product Name
                th.text-center Status
                th.text-center Serial Number
                th.text-center Install Date
                th.text-center Next PM Date
              tbody
                -for equipment in equiplist
                  tr
                    td=equipment._id
                    //  a(data-toggle='modal' href='/servicedetails?id=#{openrequest._id}' data-target='#myModal') #{openrequest._id}
                    td=equipment._Product.ProductName
                    td=equipment.StatusDescription                    
                    td=equipment.SerialNumber
                    td #{moment(equipment.InstallDate).format('MMMM, Do')}
                    td #{moment(equipment.NextPMDate).format('MMMM, Do')}
    footer
      .container
        .row
          .col-xs-4
            h6 2013
          .col-xs-4
            ul.nav.nav-pills
              li.active
                a(href='#') About Us
              li
                a(href='#') Support 24*7
              li
                a(href='#') Privacy Policy
          .col-xs-4
            h4.text-right GE Service Portal
